#!/bin/bash

case $1 in
'type'|'get'|'send'|'edit'|'delete'|'pin'|'unpin'|'pins'|'bulk_get'|'bulk_delete')
	[[ ! -z "$2" ]] && TEXT=$2 || read TEXT
	CHANNEL=$(echo "$TEXT" | jq -r '.channel')
	TEXT=$(echo "$TEXT" | jq 'del(.channel)')
	case $1 in
	'type')
		dapi POST "/channels/$CHANNEL/typing" "{}" ;;
	'get')
		MSG=$(echo "$TEXT" | jq -r '.id')
		dapi GET "/channels/$CHANNEL/messages/$MSG" "{}" ;;
	'send')
		PAYLOAD=$(echo "$TEXT" | jq 'del(.files)')
		FILES=$(echo "$TEXT" | jq '.files//empty')
		if [[ -z $FILES ]]; then
			dapi POST "/channels/$CHANNEL/messages" "$PAYLOAD"
		else
			n=0
			FILES=$(echo "$FILES" | jq '.[]' | while read f; do echo -e " -F 'file$n=@$f'"; n=$(( $n+1 )); done)
			curl -s -X "POST" -A "$MASH_USERAGENT" -H "Authorization: Bot $MASH_TOKEN" -F "payload_json=$PAYLOAD" $FILES "https://discordapp.com/api/channels/$CHANNEL/messages"
		fi ;;
	'edit')
		PAYLOAD=$(echo "$TEXT" | jq "del(.id)")
		MSG=$(echo "$TEXT" | jq -r ".id")
		dapi PATCH "/channels/$CHANNEL/messages/$MSG" "$PAYLOAD" ;;
	'delete')
		MSG=$(echo "$TEXT" | jq -r ".id")
		dapi DELETE "/channels/$CHANNEL/messages/$MSG" "{}" ;;
	'pin')
		MSG=$(echo "$TEXT" | jq -r ".id")
		dapi PUT "/channels/$CHANNEL/pins/$MSG" "{}";;
	'unpin')
		MSG=$(echo "$TEXT" | jq -r ".id")
		dapi DELETE "/channels/$CHANNEL/pins/$MSG" "{}";;
	'pins')
		dapi GET "/channels/$CHANNEL/pins" "{}";;
	'bulk_get')
		BEFORE=$(echo "$TEXT" | jq -r ".before//empty")
		[ -n $BEFORE ] || BEFORE="before=$BEFORE&"
		AFTER=$(echo "$TEXT" | jq -r ".after//empty")
		[ -n $AFTER ] || AFTER="after=$AFTER&"
		AROUND=$(echo "$TEXT" | jq -r ".around//empty")
		[ -n $AROUND ] || AROUND="around=$AROUND&"
		LIMIT=$(echo "$TEXT" | jq -r ".limit//empty")
		[ -n $LIMIT ] || LIMIT="limit=$LIMIT"

		[ -n $BEFORE$AFTER$AROUND$LIMIT ] || Q='?'
		dapi GET "/channels/$CHANNEL/messages$Q$BEFORE$AFTER$AROUND$LIMIT" " " ;;
	'bulk_delete')
		dapi POST "/channels/$CHANNEL/messages/bulk-delete" "$TEXT" ;;
	esac ;;
*)
	echo "Usage: message {COMMAND} {JSON}" >&2
	echo "Interacts with message endpoints"
	echo ""
	echo "Every command accepts a string of JSON, as stdout or arg"
       	echo "Avaliable commands with their respective JSON keys:"
	echo ""
	echo "type: {channel}"
	echo "    channel: (snowflake) the target channel"
	echo ""
	echo "get: {id} {channel}"
	echo "    id: (snowflake) the id of the message"
	echo "    channel: (snowflake) the target channel"
	echo ""
	echo "send: {channel} {content|embed|files} [nonce] [tts]"
	echo "    channel: (snowflake) the target channel"
	echo "    content: (string) the text of the message (0-2000)"
	echo "    embed: (embed object)  the embed of the message"
	echo "    files: (array) an array of paths, the files to be uploaded"
	echo "    nonce: (snowflake) the nonce of the message"
	echo "    tts: (boolean) whether the message is TTS or now"
	echo ""
	echo "edit: {id} {channel} [content] [embed]"
	echo "    id: (snowflake) the id of the message"
	echo "    channel: (snowflake) the target channel"
	echo "    content: (string) the new text of the message (0-2000)"
	echo "    embed: (embed object) the new embed of the message"
	echo ""
	echo "delete: {id} {channel}"
	echo "    id: (snowflake) the id of the message"
	echo "    channel: (snowflake) the target channel"
	echo ""
	echo "pin: {id} {channel}"
	echo "    id: (snowflake) the id of the message"
	echo "    channel: (snowflake) the target channel"
	echo ""
	echo "unpin: {id} {channel}"
	echo "    id: (snowflake) the id of the message"
	echo "    channel: (snowflake) the target channel"
	echo ""
	echo "pins: {channel}"
	echo "    channel: (snowflake) the target channel"
	echo ""
	echo "bulk_get: {channel} [around|before|after] [limit]"
	echo "    channel: (snowflake) the target channel"
	echo "    around: (snowflake) get messages around this message id"
	echo "    before: (snowflake) get messages before this message id"
	echo "    after: (snowflake) get messages after this message id"
	echo "    limit: (integer)  max number of messages to return (1-100)"
	echo ""
	echo "bulk_delete: {channel} {messages}"
	echo "    channel: (snowflake) the target channel"
	echo "    messages: (array) an array of the message ids"
	exit 1 ;;
esac
